# Kamal secrets
# This file is generated by Ansible Vault from ~/Projects/web-server-management
#
# Generate before deploy:
#   cd ~/Projects/web-server-management && make kamal-secrets app=wordlegroup project_path=~/Projects/wordle-group
#
# Edit secrets:
#   cd ~/Projects/web-server-management && make vault-edit
#
# Note: DB/Redis run on host, accessed via host.docker.internal in deploy.yml

# GitHub Container Registry
KAMAL_REGISTRY_USERNAME=OnPequod
KAMAL_REGISTRY_PASSWORD=ghp_xxx

# Laravel app secrets
APP_KEY=base64:xxx
DB_USERNAME=wordlegroup
DB_PASSWORD=xxx
REDIS_PASSWORD=xxx

# AWS (for SES mail)
AWS_ACCESS_KEY_ID=AKIAxxx
AWS_SECRET_ACCESS_KEY=xxx

# Sentry
SENTRY_LARAVEL_DSN=https://xxx@xxx.ingest.sentry.io/xxx
