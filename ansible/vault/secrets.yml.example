---
# Wordle Group app-specific secrets
# Copy to secrets.yml and encrypt:
#   cp vault/secrets.yml.example vault/secrets.yml
#   ansible-vault encrypt vault/secrets.yml
#
# Note: Shared secrets (mysql_root_password, redis_password, kamal_registry_*)
# are pulled from ~/Projects/web-server-management/vault/secrets.yml

# Database user and password
db_user: wordlegroup
db_password: CHANGE_ME

# Laravel application key (generate with: php artisan key:generate --show)
app_key: base64:CHANGE_ME

# AWS credentials (for SES email)
aws_access_key_id: CHANGE_ME
aws_secret_access_key: CHANGE_ME

# Sentry DSN (error tracking)
sentry_laravel_dsn: https://xxx@xxx.ingest.sentry.io/xxx
