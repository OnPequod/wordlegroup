#!/bin/bash
# Load a database dump file
DUMP_FILE="${1:-storage/app/dumps/production.sql}"

if [ ! -f "$DUMP_FILE" ]; then
    echo "Error: Dump file not found: $DUMP_FILE"
    exit 1
fi

echo "Loading database from: $DUMP_FILE"
docker compose exec -T postgres psql -U wordle_group -d wordle_group < "$DUMP_FILE"
echo "Done."
